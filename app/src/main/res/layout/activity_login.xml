<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/ncrb"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/transparent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="40dp"
                android:id="@+id/upper_lyt"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:text ="Government of India"
                    android:gravity="center"
                    android:id = "@+id/textView"
                    android:padding="5dp"
                    android:layout_below ="@+id/imageView"
                    android:textStyle="bold"
                    android:layout_centerHorizontal = "true"
                    android:textColor = "@color/white"
                    android:textSize ="28dp" />
                <TextView
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:text ="Ministry of Home Affairs"
                    android:gravity="center"
                    android:id = "@+id/textView1"
                    android:layout_marginTop="15dp"

                    android:layout_below = "@+id/textView"
                    android:layout_centerHorizontal = "true"
                    android:textColor = "@color/white"
                    android:textSize = "19dp" />
                <TextView
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:text ="National Crime Records Bureau"
                    android:gravity="center"
                    android:id = "@+id/textView2"
                    android:layout_below="@+id/textView1"
                    android:layout_centerHorizontal = "true"
                    android:textColor = "@color/white"
                    android:textSize = "19dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_broder"
                android:layout_margin="20dp"
                android:padding="20dp"
                android:id="@+id/second_lyt"
                android:layout_below="@+id/upper_lyt">




                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"

                        android:id = "@+id/edt_userid"
                        android:layout_height="wrap_content">


                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"


                            android:text="lasho"
                           android:backgroundTint="@color/transparent"
                            android:hint="Enter User ID"
                            android:drawablePadding="20dp"
                            android:drawableLeft="@drawable/login_user"
                            />


                    </android.support.design.widget.TextInputLayout>
                   <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"


                        android:layout_below="@+id/edt_userid"
                        android:id="@+id/edt_password"
                        android:layout_height="wrap_content">


                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"


                           android:backgroundTint="@color/transparent"
                            android:hint="Password"
                            android:text="ncrb@222"
                            android:paddingLeft="12dp"
                            android:drawablePadding="20dp"
                            android:drawableLeft="@drawable/password_login"
                            />


                    </android.support.design.widget.TextInputLayout>



                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel"

                    android:textColor = "#3336FF"
                    android:id="@+id/btn_cancel"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/textLogin"
                    android:layout_toEndOf="@+id/textLogin" />














            </RelativeLayout>
            <Button
                android:id="@+id/button_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOG IN"
                android:textSize="18dp"
                android:layout_margin="18dp"
                android:background="@color/blue"
                android:textAllCaps="false"
                android:textColor = "@color/white"
                android:layout_below="@+id/second_lyt"
                />





        </RelativeLayout>







    </RelativeLayout>

</RelativeLayout>